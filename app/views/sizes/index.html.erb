<div class="size_body">
	<h1>List of Sizes</h1>

	<table class="table">
		<tr>
			<th>Id</th>
			<th>Size</th>
			<th>Created At</th>
		</tr>

		<% @sizes.each do |size| %>
		<tr>
			<td><%= size.id %></td>
			<td><%= size.value %></td>
			<td><%= size.created_at %></td>
		</tr>
		<% end %>
	</table>
	<u><%= link_to 'Add New', new_size_url %></u>
</div>
