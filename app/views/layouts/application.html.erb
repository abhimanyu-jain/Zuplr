              <li><a href="#" style="text-transform: capitalize">Hi <%= current_user.email %> !</a></li>
              
              <% if check_user_data(current_user.id) %>
                <li><a href="/style-log">Style Log</a></li>
              <% end %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li ><a href="/login">Login</a></li>            
              <li ><a href="/register">Register</a></li>            
            <% end %>
          </ul>
