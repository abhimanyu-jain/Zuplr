<div id= "contact-form">
	<!--<h3>Book your session</h3>-->
	<br />
	<% if current_user.nil? %>
	<form>
		<!--class="home-form" role="form"-->
		<!--<h3>Enter Valid Email and Phone number</h3>-->

		<div id="contact-form" class ="row">
			<div class="col-md-0"></div>
			<div class="col-md-6">
				<input type="email" class="form-control" placeholder="Your Email ID">
			</div>
			<div class="col-md-6">
				<input type="text" class="form-control" placeholder="Your Phone Number ">
			</div>
			<div class="col-md-0"></div>
		</div>
	</form>
	<% end %>
	<br />
	<div class ="row">
		<div class="col-md-12">
			<%= button_to "Book Your Session", "/style-log", method: :get, id: "stylist-contact-submit", class: "btn btn-success" %>
		</div>
	</div>
	<br />
</div>
