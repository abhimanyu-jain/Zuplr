<div id= "contact-form" style="top:350px; position: absolute;">
	<!--<h3>Book your session</h3>-->
	<br />
	<% if current_user.nil? %>
	<form method="get" action="/users-check">
		<!--class="home-form" role="form"-->
		<!--<h3>Enter Valid Email and Phone number</h3>-->

		<div id="contact-form" class ="">
				<input id = "input-email" type="email" name = "email" class="form-control" placeholder="Your Email ID" required>
				<input id = "input-phone" type="number" name ="phone" class="form-control" placeholder="Your Phone Number " onKeyDown="if(this.value.length==10 && event.keyCode!=8) return false;" required>
		</div>
		<br />
		<div class ="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<button id="stylist-contact-submit" class="btn btn-success center-block" type="submit">Book Your Session</button>
			</div>
			<div class="col-md-4"></div>
		</div>
		<br />
	</form>
	<% else %>
		<br />
		<div class ="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<%= button_to "Book Your Session", "/style-log", method: :get, id: "stylist-contact-submit", class: "btn btn-success center-block" %>
			</div>
			<div class="col-md-4"></div>
		</div>
		<br />
	<% end %>

</div>
