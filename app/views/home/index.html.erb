						<h2 class = "carousel-caption-headline">Free Home Delivery</h2>
					</div>
				</div>
	
				<div class="item">
					<%= image_tag(@slider4, alt: "Fourth slide") %>
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Pay Only for What You Keep</h2>
					</div>
				</div>
				
				<div class="item">
					<%= image_tag(@slider5, alt: "Fifth slide") %>
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Easy Returns</h2>
					</div>
				</div>
				
				<div class="item">
					<%= image_tag(@slider6, alt: "Sixth slide") %>
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Discover the New You</h2>
					</div>
				</div>
			</div>
		</div>
