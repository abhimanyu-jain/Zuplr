<div class="container devise-form bottom-space">
  <div class="col-sm-8 col-sm-offset-2"><div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.change_your_password', :default => 'Forgot your password') %></h4>
  </div>
  <div class="panel-body">
    <%= bootstrap_devise_error_messages! %>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", :placeholder => "Enter your Email Id" %>
      </div>
       <%= f.submit "Send me reset password instructions", class: "btn btn-z1 btn-z2 btn-block"  %>
    <% end %>
  </div>
</div>
  </div>
</div>
