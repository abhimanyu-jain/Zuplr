				<li data-target="#myCarousel" data-slide-to="5"></li>
			</ol>
			
			<div class="carousel-inner">
				<div class="active item">
					<%= image_tag(@slider1, alt: "First slide") %>
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Experience a New Way of Shopping</h2>
					</div>
				</div>
				<div class="item">
					<%= image_tag(@slider2, alt: "Second slide") %>
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Clothes Handpicked by Fashion Stylists</h2>
					</div>
				</div>

				<div class="item">
					<%= image_tag(@slider3, alt: "Third slide") %>
