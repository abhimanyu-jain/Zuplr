<div class="content padding-space">
  <h3 class="title">Edit Profile</h3>
  <hr class="bms-style">
  <div class="container">
    <div class="col-sm-8 col-sm-offset-2">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => 'form-horizontal inner-form', method: :put }) do |f| %>

        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email, :class => 'col-sm-3 control-label'%>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password, :class => 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
             <!-- <span>(leave blank if you don't want to change it)</span> -->
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, :class => 'col-sm-3 control-label' %>
           <div class="col-sm-9">
            <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "off" %>
           </div>
        </div>

        <div class="field form-group">
          <%= f.label :current_password, :class => 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
             <!-- <span>(we need your current password to confirm your changes)</span> -->
          </div>
        </div> 
        <div class="field form-group">
          <label class='col-sm-3 control-label'>Phone Number</label>
          <div class="col-sm-9">
            <%= f.text_field :user_profile_phone, value: @userprofile.phonenumber , class: "form-control", autocomplete: "off" %>
          </div>
        </div> 

        <div class="field form-group">
          <label class='col-sm-3 control-label'>City</label>
          <div class="col-sm-9">
            <%= f.text_field :user_profile_city, value: @userprofile.city, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="actions col-sm-offset-3">
          <%= f.submit "Update", class: "btn btn-z1 btn-sm btn-block", style: 'margin-top: 30px;' %>
        </div>
      <% end %>

    <!-- <h3>Cancel my account</h3>

    <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%#= link_to "Back", :back %> -->
    </div>
  </div>
</div>