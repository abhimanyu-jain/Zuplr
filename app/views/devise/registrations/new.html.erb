<div class="container devise-form">
	<div class="col-sm-12">
		<div class="panel panel-default" style="border-radius: 0px;">
			<div class="panel-body" style="padding:0px">
				<div class="row registration-form" style="">
					<div class="col-sm-12">
						<%= bootstrap_devise_error_messages! %>
					</div>
					<div class="col-sm-6">
						<h4>Create your Zuplr account</h4>
						<h5 class="hidden-xs">Enter your details to create an account</h5>
						<br>
						<form role="form" class="new_user lr-form" id="new_user" action="/users" accept-charset="UTF-8" method="post">
							<input name="utf8" type="hidden" value="✓">
							<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
							<div class="form-group">
								<input autofocus="autofocus" placeholder="Enter your Name" class="form-control" type="text" value="" name="user[name]" id="user_name">
							</div>
							<div class="form-group">
								<input placeholder="Enter your email" class="form-control" type="email" value="" name="user[email]" id="user_email">
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="Password" type="password" name="user[password]" id="user_password">
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="Password confirmation" type="password" name="user[password_confirmation]" id="user_password_confirmation">
							</div>
							<button type="submit" name="commit" class="btn btn-z1 btn-z2 btn-block">
								Create an account
							</button>
						</form>
					</div>
					<div class="col-sm-6 registration-links" style="text-align: center">
						<p style="padding:15px 0px">
							If you have an account click the button below to login.
						</p>
						<a href="/login"><img src="login.png" class="img-responsive" style="margin: auto;"></a>
						<hr>
						<a href="/users/auth/facebook"><img src="facebook_login.png" class="img-responsive" style="margin: auto;"></a>
						<br>
						<br>
						<a href="/users/auth/google_oauth2"><img src="google_login.png" class="img-responsive" style="margin: auto;"></a>
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-sm-12">
						<p style="padding:0px 30px 10pxa; font-size: 12px; text-align: center;">
							So you can’t get in to your account? Did you <a href="/users/password/new">forget your password</a>?
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>