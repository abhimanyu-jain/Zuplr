<section id="home">
	<%= render 'common/navigation' %>
	<div class="fill">
		<!-- <div class="slider-overlay"></div> -->
		<div id="myCarousel" class="carousel slide">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="active item">
					<img class="first-slide" src="/home-bg.jpg" alt="First slide">
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Let Zuplr do your fashion shopping for you</h2>
						<%= render 'main_form' %>
					</div>
				</div>
				<div class="item">
					<img class="second-slide" src="/slider-2.jpg" alt="Second slide">
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Clothes handpicked by top stylists</h2>
						<%= render 'main_form' %>
					</div>
				</div>

				<div class="item">
					<img class="third-slide" src="/slider-3.jpg" alt="Third slide">
					<div class="carousel-caption">
						<h2 class = "carousel-caption-headline">Hassle free returns</h2>
						<%= render 'main_form' %>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>

<section id="what">
	<%= render 'what' %>
</section>
<hr>
<section id="how">
	<%= render 'how' %>
</section>

<section id="social">
	<%= render 'social' %>
</section>